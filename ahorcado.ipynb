    "def palabra_aleatoria():   \n",
    "    palabras=[\"I N T E L I G E N C I A\", \"N E G O C I O\", \"U N I R\", \"T A R E A\", \"T E S T\", \"A C T I V I D A D\"]\n",
    "    palabras1=[\"INTELIGENCIA\", \"NEGOCIO\", \"UNIR\", \"TAREA\", \"TEST\", \"ACTIVIDAD\"]\n",
    "    indice_random = rnd.randint(0, len(palabras)-1)   \n",
    "    palabra_radom = palabras[indice_random]\n",
    "    pal_temp = palabra_radom\n",
    "    primera_letra = palabra_radom[0]\n",
    "    ultima_letra = palabra_radom[-1]    \n",
    "    rangos = []\n",
    "    aleatoria = []\n",
    "    for num in range(len(pal_temp)):\n",
    "        rangos.append(num)\n",
    "        aleatoria.append(palabra_radom[num])\n",
    "\n",
    "    for i in range(len(pal_temp)):\n",
    "        if pal_temp[i] != \" \":\n",
    "            aleatoria[i] = \"_\"\n",
    "\n",
    "    aleatoria[0] = primera_letra\n",
    "    aleatoria[-1] = ultima_letra\n",
    "\n",
    "    for i in rangos:\n",
    "        if pal_temp[i] != \" \":\n",
    "            pal_temp = pal_temp[:i] + '_' + pal_temp[i+1:]\n",
    "\n",
    "    ## pal_temp[:0] es la posición\n",
    "    ## pal_temp[:-1] es la posición\n",
    "    pal_temp = pal_temp[:0] + primera_letra + pal_temp[1:]\n",
    "    pal_temp = pal_temp[:-1] + ultima_letra\n",
    "    \n",
    "    pista = [pal_temp, aleatoria, palabra_radom]\n",
    "    return(pista)\n",
    "\n",
    "#########################################\n",
    "def adivina_palabra(pal_user, pal_random):\n",
